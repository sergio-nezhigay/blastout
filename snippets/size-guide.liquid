{%- liquid
  assign current_product_type = product.type | strip | downcase
-%}

<h2 class="size-guide-title">{{ 'size_guide.title' | t }}</h2>

<div class="size-guide-table-wrapper">
  {%- if current_product_type == 'взуття' or current_product_type == 'shoes' -%}
    <table class="size-guide-table">
      <thead>
        <tr>
          <th>{{ 'size_guide.eu' | t }}</th>
          <th>{{ 'size_guide.us' | t }}</th>
          <th>{{ 'size_guide.uk' | t }}</th>
          <th>{{ 'size_guide.cm' | t }}</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>35</td>
          <td>5</td>
          <td>3</td>
          <td>22.5</td>
        </tr>
        <tr>
          <td>36</td>
          <td>5.5</td>
          <td>3.5</td>
          <td>23</td>
        </tr>
        <tr>
          <td>37</td>
          <td>6.5</td>
          <td>4.5</td>
          <td>24</td>
        </tr>
        <tr>
          <td>38</td>
          <td>7.5</td>
          <td>5.5</td>
          <td>25</td>
        </tr>
        <tr>
          <td>39</td>
          <td>8.5</td>
          <td>6.5</td>
          <td>26</td>
        </tr>
        <tr>
          <td>40</td>
          <td>9</td>
          <td>7</td>
          <td>27</td>
        </tr>
        <tr>
          <td>41</td>
          <td>10</td>
          <td>8</td>
          <td>28</td>
        </tr>
      </tbody>
      <tfoot>
        <tr class="size-guide-units-row">
          <td colspan="3"></td>
          <td>({{ 'size_guide.cm' | t }})</td>
        </tr>
      </tfoot>
    </table>
  {%- else -%}
    <table class="size-guide-table">
      <thead>
        <tr>
          <th>{{ 'size_guide.size' | t }}</th>
          <th>{{ 'size_guide.chest' | t }}</th>
          <th>{{ 'size_guide.waist' | t }}</th>
          <th>{{ 'size_guide.hips' | t }}</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>XS</td>
          <td>82–88</td>
          <td>60–64</td>
          <td>88–92</td>
        </tr>
        <tr>
          <td>S</td>
          <td>88–94</td>
          <td>64–68</td>
          <td>92–96</td>
        </tr>
        <tr>
          <td>M</td>
          <td>94–98</td>
          <td>68–72</td>
          <td>96–100</td>
        </tr>
        <tr>
          <td>L</td>
          <td>98–102</td>
          <td>72–76</td>
          <td>100–104</td>
        </tr>
      </tbody>
      <tfoot>
        <tr class="size-guide-units-row">
          <td></td>
          <td>({{ 'size_guide.cm' | t }})</td>
          <td>({{ 'size_guide.cm' | t }})</td>
          <td>({{ 'size_guide.cm' | t }})</td>
        </tr>
      </tfoot>
    </table>
  {%- endif -%}
</div>
